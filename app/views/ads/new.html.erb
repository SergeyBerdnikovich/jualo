
<%= form_for Image.new, :html => {:style=>"display:none",:class => 'form-horizontal', :multipart => true }, :remote => true do |f| %>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, :id=>"choose_image" %>
  </div>
  <div class="actions">
    <%= f.submit :id=>"submit_image" %>
  </div>
<% end %>


